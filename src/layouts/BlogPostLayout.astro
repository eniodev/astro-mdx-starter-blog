---
import { format, parseISO } from "date-fns";
import { Icon } from "astro-icon/components";
const { frontmatter, page } = Astro.props;
const date = new Date(frontmatter.publishedDate);
---

<section class="mt-4">
    <div class="w-full flex items-center justify-between">
        <button onClick="history.back()" class="flex items-center gap-1 text-sm">
            <Icon name="arrow-left" weight="bold" size={16} />
            Go back
        </button>
        <div class="flex items-center justify-center gap-3">
            <button class="p-1.5 rounded-full hover:bg-gray-800" data-tooltip-target="tooltip-default">
                <Icon name="copy" size={18} />
            </button>
            <button class="p-1.5 rounded-full hover:bg-gray-800">
                <Icon name="x" size={18} />
            </button>
        </div>
    </div>
    <div class="blog-header flex flex-col my-10">
        <h1 class="text-3xl">{frontmatter.title}</h1>
        <time datetime={date.toISOString()} class="text-nowrap text-sm">
            {
                format(
                    parseISO(date.toISOString().substring(0, 10)),
                    "MMMM dd, yyyy",
                )
            }
        </time>
    </div>
    <slot />
</section>
